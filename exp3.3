#include <stdio.h>

int main() {
    int i, j, num = 1;

    for (i = 1; i <= 3; i++) {      // 3 rows
        for (j = 1; j <= i; j++) {  // print i numbers in each row
            printf("%d ", num);
            num++;
        }
        printf("\n");               // move to next line
    }

    return 0;
}

